{% extends '@!EasyAdmin/page/content.html.twig' %}

{% block page_content %}
    <h4>{{ page_title }}</h4>
    <head>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">

    google.charts.load('current', {'packages':['gantt']});
    google.charts.setOnLoadCallback(drawChart);


    function daysToMilliseconds(days) {
      return days * 24 * 60 * 60 * 1000;
    }

    function drawChart() {

      var array = document.getElementById('gant').value;
      var datavalue = JSON.parse(array);

      var data = new google.visualization.DataTable();
      data.addColumn('string', 'Task ID');
      data.addColumn('string', 'Task Name');
      data.addColumn('string', 'Resource');
      data.addColumn('date', 'Start Date');
      data.addColumn('date', 'End Date');
      data.addColumn('number', 'Duration');
      data.addColumn('number', 'Percent Complete');
      data.addColumn('string', 'Dependencies');

      for (i = 0; i < datavalue.length; i++) {
            var d_start_y = parseInt(datavalue[i].StartDate.substring(0, 4));
            var d_start_m = parseInt(datavalue[i].StartDate.substring(4, 6));
            var d_start_d = parseInt(datavalue[i].StartDate.substring(6, 8));

            var arrayData = [datavalue[i].TaskID, datavalue[i].TaskName, datavalue[i].Resource, new Date(d_start_y, d_start_m-1, d_start_d), null , daysToMilliseconds(datavalue[i].Duration), datavalue[i].PercentComplete, datavalue[i].Dependencies];
            data.addRows([arrayData]);
           };

      var options = {
        height: 300,
        gantt: {
          criticalPathEnabled: false,
          trackHeight: 30,
          innerGridHorizLine: {
            stroke: '#ffe0b2',
            strokeWidth: 2
          },
          innerGridTrack: {fill: '#fff3e0'},
          innerGridDarkTrack: {fill: '#ffcc80'}
        }
      };

      var chart = new google.visualization.Gantt(document.getElementById('gantt_div'));
      chart.draw(data, options);

    }
  </script>

  <script type="text/javascript">

      google.charts.load('current', {'packages':['bar']});
      google.charts.setOnLoadCallback(drawChart);

 function drawChart() {

     var array = document.getElementById('bar').value;
     var datavalue = JSON.parse(array); 

     var data = new google.visualization.DataTable();
      data.addColumn('string', 'Cantiere'  );
      data.addColumn('number', 'Ore budget'); 
      data.addColumn('number', 'Ore lavorate'); 
      data.addColumn('number', 'Prezzo medio'); 
      data.addColumn('number', 'Costo medio'); 
      for (i = 0; i < datavalue.length; i++) {
            var arrayData = [datavalue[i].Cantiere, datavalue[i].OreBud, datavalue[i].OreLav, datavalue[i].Prezzo, datavalue[i].Costo];
            data.addRows([arrayData]);
           };

        var options = {
          colors: ['blue','orange','green','red'],
          chart: {
            title: 'Elenco cantieri',
            subtitle: 'Confronto ore budget/lavorate e Prezzo/Costo medio orario',
          },
          bars: 'horizontal' // Required for Material Bar Charts.
          };

        var chart = new google.charts.Bar(document.getElementById('bar_div'));
        chart.draw(data, google.charts.Bar.convertOptions(options));
      }

    </script>

    </head>

    <body>
      <input type="hidden" id="gant" value="{{ gant_chart|json_encode }}">
      <input type="hidden" id="bar" value="{{ bar_chart|json_encode }}">
      <div id="gantt_div" style="width: 800px" > </div>
      <div id="bar_div" style="width: 800px; height: 500px;" > </div>
    </body>

{% endblock %}

