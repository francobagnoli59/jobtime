{% extends 'base.html.twig' %}

{% block title %}I nostri Cantieri e le vostre preziose considerazioni{% endblock %}

{% block body %}
    <h2 class="mb-5">
        Scegli il tuo Cantiere e dacci una tuo Feedback!
    </h2>

    {% for row in cantieri|batch(4) %}
        <div class="row">
            {% for cantiere in row %}
                <div class="col-12 col-md-6 col-lg-3 mb-4">
                    <div class="card border shadow lift">
                        <div class="card-body">
                            <div class="card-title">
                                <h4 class="font-weight-light">
                                    {{ cantiere }}
                                </h4>
                            </div>

                            <a href="{{ path('cantieri', { nameJob: cantiere.nameJob }) }}"
                               class="btn btn-sm btn-blue stretched-link">
                                Vedi
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endfor %}
{% endblock %}
